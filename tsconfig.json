{
  "compilerOptions": {
    "target": "ES5",
    "rootDir": "src",
    "outDir": "lib",
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "declaration": false,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist"
  ]
}
